@page
@model repoTestCurso.Pages.TodosPage.NuevoTodoModel
@{
    ViewData["Title"] = "NuevoTodo";
}

<h2>Nuevo Todo</h2>

<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">

                    <div class="form-group">
                        <label for="name">Nombre de tarea</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-plus-sign"></i></span>
                            <input id="name" asp-for="Todo.Name" type="text" class="form-control" placeholder="Nombre">
                        </div>
                        <span asp-validation-for="Todo.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="desc">Descripcion:</label>
                        <textarea type="text" asp-for="Todo.Description" rows="8" cols="70" class="form-control" id="desc"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="date">Programar ToDo:</label>
                        <input id="date" type="date" class="form-control" asp-for="Todo.CreatedAt" />
                    </div>
                    <br />
                    <br />
                </div>
                <br />
                <button type="submit" class="btn btn-success">Agregar</button>
            </div>
        </div>
    </form>
</div>

